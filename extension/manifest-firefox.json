{
  "manifest_version": 2,
  "name": "ChatGPT anywhere",
  "version": "0.0.0",
  "permissions": [
    "cookies",
    "storage",
    "*://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "openai.js",
        "content-script.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
